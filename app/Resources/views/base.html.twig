<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BChat</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    {% endblock %}

        <!--[if lt IE 9]>
            <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
            <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
            <![endif]-->
        </head>
        <body>
            <div class="container">
                {% block body %}
                    <div class="jumbotron">
                        <h1>BChat</h1>
                        <p>Simple backend chat using RabbitMq</p>
                        <div class="row">
                          <div class="col-lg-6">
                            <div class="input-group">
                              <input id="message" type="text" class="form-control" placeholder="Hello, world!">
                              <span class="input-group-btn">
                                <button class="btn btn-primary" type="button" id="say">Say</button>
                            </span>
                        </div>
                    </div>
                </div>        
            {% endblock %}
        </div>

        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
            <script>
                $(function() {
                    $('#say').click(function(e) {
                        var input = $("#message");

                        e.preventDefault();

                        $.ajax({
                            method: "POST",
                            url: "/say",
                            data: {message: input.val()}
                        }).done(function() {
                            input.val('');
                        }).error(function() {
                            console.log('error');
                        });
                  });

                });
            </script>
        {% endblock %}
    </body>
    </html>
